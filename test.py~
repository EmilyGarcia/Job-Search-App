from tkinter import *

master = Tk()

listbox = Listbox(master, selectmode=SINGLE).grid(row=3, column=2, sticky=W, pady=4)
listbox.grid()

listbox.insert(END, "a list entry")

for item in ["one", "two", "three", "four"]:
    listbox.insert(END, item)
    
Button(master, text=listbox.get(ACTIVE)).grid(row=3, column=2, sticky=W, pady=4)

mainloop()





map = Basemap(projection='merc', lat_0=36, lon_0=-119,
    resolution = 'h', area_thresh = 1000.0,
    llcrnrlon=-119.643034, llcrnrlat=31.693901,
    urcrnrlon=-119.633409, urcrnrlat=42.326470)
